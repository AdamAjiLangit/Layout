<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/title"
        android:paddingStart="220px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="USD Currency Changer"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="70px"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="202dp" />

    <EditText
        android:inputType= "number"
        android:id="@+id/EdNominalUang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:background="@drawable/border"
        android:hint="Masukan Nominal Uang Dalam Rupiah"
        android:textAlignment="4"
        android:textSize="45px"
        app:layout_constraintTop_toBottomOf="@+id/title"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/EdHasilUang"
        android:layout_marginTop="100px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:hint="Hasil Disini"
        android:textAlignment="4"
        android:textSize="50px"
        app:layout_constraintTop_toBottomOf="@+id/EdNominalUang"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="83dp" />

    <Button
        android:id="@+id/btnSubmit"
        android:text="submit"
        app:layout_constraintTop_toBottomOf="@id/EdHasilUang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>